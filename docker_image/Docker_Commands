	## To build Docker Image
	docker build -t ad-shiny-app .
	# To See Docker Images Built
	docker Image ls
	# To Run a Docker Image instance - Container
	docker run --rm -p 3838:3838 ad-shiny-app
	# Display the List of Containers
	docker ps
	# Display Docker Container Ports
	docker port <containerId>
	# Access the Shiny App
	http://127.0.0.1:3838/
	# Specific App1
	http://127.0.0.1:3838/ShinyAppAds/
